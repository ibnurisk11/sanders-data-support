{
  "name": "Python 3",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",
  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md",
        "main.py"
      ]
    },
    "vscode": {
      "settings": {},
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },
  "updateContentCommand": "[ -f packages.txt ] && sudo apt update && sudo apt upgrade -y && sudo xargs -a packages.txt apt install -y; [ -f requirements.txt ] && pip3 install -r requirements.txt; pip3 install streamlit; echo 'âœ… Packages installed and Requirements met'",
  "postAttachCommand": "streamlit run main.py --server.enableCORS false --server.enableXsrfProtection false --server.port 8501",
  "portsAttributes": {
    "8501": {
      "label": "Application Main Dashboard",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [8501],
  "remoteEnv": {
    "PYTHONPATH": "/workspace"
  }
}